<page>
	<icon-button
		action-0="menu:previous-page"
		src="/assets/icons/icon_arrow_left.png"
	/>

    <title>Developer Options</title>

    <body>I wouldn't linger here unless you know what you're doing!</body>

    <button
        title="Message Log"
        description="See any errors, warnings, or messages logged by the app"
        action-0="menu:next-page"
        action-0-argument-0="reserved-log"
    />

    <button
        title="Properties Overlay"
        description="Toggle the display of various properties for debugging purposes"
        action-0="developer:toggle-info"
    />

    <button
        title="Clear Cache"
        description="Clear the cached content and redownload it the next time the app starts"
        action-0="developer:clear-cache"
    />

    <subtitle>Pages Source</subtitle>
    
    <input
        placeholder="Development server url..."
        action-0="developer:refresh-content"
    />

    <button
        title="Reset Pages"
        description="Redownload the pages from the production server"
        action-0="developer:refresh-content"
        action-0-argument-0=""
    />
